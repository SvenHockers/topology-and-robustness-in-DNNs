{
  "general": {
    "seed": 123,
    "exp_name": "test_plots",
    "device": "cpu",
    "output_dir": "outputs/ex1/test_plots",
    "sample_limit": 6,
    "style": "paper"
  },
  "data": {
    "n_samples_per_shape": 12,
    "n_points": 8,
    "noise": 0.05,
    "val_split": 0.5,
    "batch_size": 8
  },
  "model": {
    "arch": "MLP",
    "train": true,
    "epochs": 1,
    "lr": 0.001,
    "checkpoint": null
  },
  "probes": {
    "adversarial": {
      "enabled": true,
      "norms": [
        "linf"
      ],
      "attack_types": [
        "pgd",
        "fgsm"
      ],
      "eps_max": 0.5,
      "steps": 5,
      "tol": 0.01,
      "outer_bisect": false,
      "eps_grid": [],
      "compare_attacks": true,
      "attack_comparison_metrics": [
        "eps_star",
        "topology_distance",
        "perturbation_magnitude"
      ],
      "fgsm": {
        "enabled": true,
        "eps": null
      },
      "cw": {
        "enabled": false,
        "c_init": 0.001,
        "c_max": 10.0,
        "binary_search_steps": 9,
        "max_iterations": 1000,
        "learning_rate": 0.01,
        "confidence": 0.0
      },
      "l0": {
        "enabled": false,
        "max_perturbed_elements": 10,
        "strategy": "gradient_based",
        "max_iterations": 100,
        "eps_per_element": 0.1
      },
      "uap": {
        "enabled": false,
        "max_iterations": 1000,
        "delta_init": 0.01,
        "xi": 10.0
      },
      "boundary": {
        "enabled": false,
        "max_iterations": 1000,
        "spherical_step_size": 0.01,
        "source_step_size": 0.01
      }
    },
    "geometric": {
      "enabled": false,
      "tol": 0.001,
      "rotation": {
        "axes": [
          "z"
        ],
        "deg_range": [
          -45.0,
          45.0
        ]
      },
      "translation": {
        "axes": [
          "x",
          "y",
          "z"
        ],
        "range": [
          -0.2,
          0.2
        ]
      },
      "jitter": {
        "std_range": [
          0.0,
          0.2
        ],
        "clip": 0.5
      },
      "dropout": {
        "ratio_range": [
          0.0,
          0.5
        ]
      }
    },
    "interpolation": {
      "enabled": false,
      "pairs_per_class": 20,
      "match": "index",
      "steps": 50,
      "cross_class": false
    },
    "permutation": {
      "enabled": false,
      "n_permutations": 50,
      "compute_topology": true,
      "layers": [
        "fc1",
        "fc2",
        "fc3",
        "pooled"
      ],
      "distances": [
        "wasserstein"
      ]
    },
    "topology": {
      "enabled": false,
      "compute_dgm": true,
      "maxdim": 1,
      "sample_size": 200,
      "normalize": "none",
      "pca_dim": null,
      "batches_for_topology": 1,
      "bootstrap_repeats": 1
    },
    "layerwise_topology": {
      "enabled": false,
      "layers": [
        "input",
        "fc1",
        "fc2",
        "fc3",
        "pooled"
      ],
      "distances": [
        "wasserstein"
      ],
      "maxdim": 1,
      "sample_size": 200,
      "conditions": {
        "adv_linf_eps": [
          0.1,
          0.2
        ],
        "adv_l2_eps": [
          0.1
        ],
        "rotation_deg": [
          10.0,
          20.0
        ],
        "jitter_std": [
          0.05
        ]
      }
    }
  },
  "reporting": {
    "save_csv": true,
    "save_plots": true,
    "save_artifacts": false,
    "sample_visualizations_per_class": 0,
    "save_adversarial_visualizations": false,
    "n_adversarial_visualizations": 10,
    "visualization_selection": "diverse",
    "save_per_class_plots": false,
    "save_statistical_plots": false,
    "save_layer_transformations": false,
    "n_layer_transformation_samples": 3
  }
}